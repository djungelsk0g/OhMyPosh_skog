{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "palette": {
        "git-normal": "#46676d",
        "git-ahead": "#6EFFFF",
        "git-behind": "#FFA06D",
        "git-ahead-behind": "#C0CFFF",
        "git-staging": "#FFD740",
        "git-staging-working": "#FFB2FF",
        "git-upstream-gone": "#FF867F",
        "git-working": "#84FFFF"
    },
    "version": 2,
    "blocks": [
        {
            "type":"prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#8ab6ec",
                    "template": "‚ï≠"
                },
                {
                    "type": "text",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#68a194",
                    "background": "#37554e",
                    "template": "{{if .Segments.Git.RepoName}}\uf09b {{else}}\uf489 {{end}}"
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#000000",
                    "background": "#8ab6ec",
                    "template": " \uf07c {{ .Path }}",
                    "properties": {
                        "style": "agnoster_short",
                        "folder_separator_icon": "/",
                        "hide_root_location": true,
                        "max_depth": 2
                    }
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "background_templates": [
                        "{{ if gt .Ahead 0 }}p:git-ahead{{ end }}",
                        "{{ if gt .Behind 0 }}p:git-behind{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git-ahead-behind{{ end }}",
                        "{{ if and (not .Working.Changed) (.Staging.Changed) }}p:git-staging{{ end }}",
                        "{{ if and (.Working.Changed) (.Staging.Changed) }}p:git-staging-working{{ end }}",
                        "{{ if .UpstreamGone }}p:git-upstream-gone{{ end }}",
                        "{{ if and (.Working.Changed) (not .Staging.Changed) }}p:git-working{{ end }}"
                    ],
                    "background": "p:git-normal",
                    "foreground": "#000000",
                    "leading_diamond": " \uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "properties": {
                        "branch_icon": "\uf126 ",
                        "fetch_status": true,
                        "fetch_stash_count": true
                    }
                }
            ] 
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "properties": {

                    }
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "properties": {
                        
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#8ab6ec",
                    "template": "‚ï∞ùà≥"
                }
            ]
        
        }
    ]
  }