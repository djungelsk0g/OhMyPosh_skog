{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "palette": {
        "light-blue": "#8ab6ec",
        "black-text": "#000000",
        "light-sage-fg": "#68a194",
        "dark-sage-bg": "#37554e",
        "git-normal": "#46676d",
        "git-ahead": "#26c628",
        "git-behind": "#FFA06D",
        "git-ahead-behind": "#C0CFFF",
        "git-staging": "#FFD740",
        "git-staging-working": "#FFB2FF",
        "git-upstream-gone": "#ff0000",
        "git-working": "#84ffcc"
    },
    "version": 2,
    "blocks": [
        {
            "type":"prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "p:light-blue",
                    "template": "‚ï≠"
                },
                {
                    "type": "text",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "p:light-sage-fg",
                    "background": "p:dark-sage-bg",
                    "template": "{{if .Segments.Git.RepoName}}\uf09b {{else}}\uf489 {{end}}"
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "p:black-text",
                    "background": "p:light-blue",
                    "template": " \uf07c {{ .Path }}",
                    "properties": {
                        "style": "agnoster_short",
                        "folder_separator_icon": "/",
                        "hide_root_location": true,
                        "max_depth": 2
                    }
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "leading_diamond": " \uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "p:black-text",
                    "background": "p:git-normal",
                    "background_templates": [
                        "{{ if .UpstreamGone }}p:git-upstream-gone{{ end }}",
                        "{{ if and (.Working.Changed) (.Staging.Changed) }}p:git-staging-working{{ end }}",
                        "{{ if and (not .Working.Changed) (.Staging.Changed) }}p:git-staging{{ end }}",
                        "{{ if and (not .Staging.Changed) (.Working.Changed) }}p:git-working{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git-ahead-behind{{ end }}",
                        "{{ if and (gt .Ahead 0) (eq .Behind 0) }}p:git-ahead{{ end }}",
                        "{{ if and (eq .Ahead 0) (gt .Behind 0) }}p:git-behind{{ end }}"
                    ],
                    "properties": {
                        "branch_icon": "\uf126 ",
                        "fetch_status": true,
                        "fetch_stash_count": true
                    }
                }
            ] 
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B4 ",
                    "foreground": "p:light-sage-fg",
                    "background": "p:dark-sage-bg",
                    "template": "\uEBA2 {{ .FormattedMs }}",
                    "properties": {
                        "always_enabled": true,
                        "style": "austin"
                    }
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "p:light-sage-fg",
                    "background": "p:dark-sage-bg",
                    "template": "{{ .CurrentDate | date .Format }}",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "p:light-blue",
                    "template": "‚ï∞ùà≥"
                }
            ]
        
        }
    ]
  }